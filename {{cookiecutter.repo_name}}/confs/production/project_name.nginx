server {
    server_name repo_name.com;
    return 301 $scheme://www.repo_name.com$request_uri;
}

server {
    listen 80;
    server_name www.repo_name.com;
    access_log /var/log/nginx/repo_name.access.log;
    error_log /var/log/nginx/repo_name.error.log;

    client_max_body_size 20M;

    location / {
        uwsgi_pass unix:///PATH/TO/FILE.SOCK;
        include uwsgi_params;
    }

    location /static {
        alias /PATH/TO/STATIC_FILES/;
    }
}
